/**game.wxss**/

.top-bar{
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 30rpx;
  padding: 18rpx 12rpx;
}

.score{
  color: #f9bdbd;
}

.timer{
  background: #FD9090;
  padding: 4rpx 20rpx;
  border-radius: 4rpx;
}

.btn-pause{
  background: #FCAD26;
  color: #fff;
}

.btn-pause-active{
  background: #f3a51f;
}

.game{
  padding: 0;
  margin-top: 100rpx;
  background: #eee;
  display: flex;
  flex-wrap: wrap;
}

.grid{
  width: 40rpx;
  height: 40rpx;
  border: 6rpx solid #eee;
  box-sizing: border-box;
  border-radius: 12rpx;
}

.cb-2{
  width: 50%;
  height: 10rem;
}

.cb-3{
  width: 33.33%;
  height: 6.66rem;
}

.cb-4{
  width: 25%;
  height: 5rem;
}

.cb-5{
  width: 20%;
  height: 3.9rem;
}

.cb-6{
  width: 16.66%;
  height: 3.2rem;
}

.cb-7{
  width: 14.28%;
  height: 2.8rem;
}

.cb-8{
  width: 12.5%;
  height: 2.4rem;
}

.cb-9{
  width: 11.11%;
  height: 2.2rem;
}

.ps-modal{
  width: 100%;
  height: 100%;
  background: #F06060;
  position: absolute;
  left: 0;
  top: 0;
}

.ps-tips{
  color: #fff;
  margin-top: 200rpx;
  font-size: 50rpx;
  text-shadow: 1px 1px 1px #AB3C3C;
}